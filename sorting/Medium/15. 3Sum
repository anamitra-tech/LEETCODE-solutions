
    vector<vector<int>> threeSum(vector<int>& nums) {
        vector<vector<int>> result;
        int n = nums.size();
        if (n < 3) return result;

        sort(nums.begin(), nums.end());
        unordered_map<int, vector<pair<int,int>>> pairSum; // sum -> list of pairs

        for (int i = 0; i < n; i++) {
            int target = -nums[i];

            // Step 1: check if target exists in pairSum
            if (pairSum.count(target)) {
                for (auto &p : pairSum[target]) {
                    int a = p.first, b = p.second;
                    if (b < i) // ensure indices are distinct
                        result.push_back({nums[a], nums[b], nums[i]});
                }
            }

            // Step 2: add new pairs (nums[j], nums[i]) for future iterations
            for (int j = 0; j < i; j++) {
                int sum = nums[j] + nums[i];
                pairSum[sum].push_back({j,i});
            }
        }

        // remove duplicates
        sort(result.begin(), result.end());
        result.erase(unique(result.begin(), result.end()), result.end());

        return result;
    }
