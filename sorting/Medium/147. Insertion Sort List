ListNode* insertionSortList(ListNode* head) {
    if (!head || !head->next) return head;

    ListNode* dummy = new ListNode(-1);  // Dummy node
    dummy->next = head;

    ListNode* curr = head->next;   // Node to insert
    head->next = nullptr;          // Start sorted list with first node

    while (curr) {
        ListNode* nextNode = curr->next;  // Save next node
        ListNode* temp = dummy;           // Start from dummy

        // ðŸ§  Compare with dummy->next (your idea)
        if (curr->val < dummy->next->val) {
            // Insert at start
            curr->next = dummy->next;
            dummy->next = curr;
        } else {
            // Move temp until we find position
            while (temp->next && temp->next->val < curr->val)
                temp = temp->next;

            // Insert curr after temp
            curr->next = temp->next;
            temp->next = curr;
        }

        // Move to next node
        curr = nextNode;
    }

    return dummy->next;
}
