int mid = (n + 1) / 2;
int s = mid - 1; // start from end of left half (reversed)
int e = n - 1;   // start from end of right half (reversed)

while (s >= 0 || e >= mid) {
    if (s >= 0) result.push_back(nums[s--]);
    if (e >= mid) result.push_back(nums[e--]);
}

