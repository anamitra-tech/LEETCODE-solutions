 int minAreaRect(vector<vector<int>>& points) {
        unordered_map<int, set<int>> x_to_ys;

        // Step 1: Build the x -> set of y's map for fast lookup
        for (auto& p : points) {
            x_to_ys[p[0]].insert(p[1]);
        }

        int res = INT_MAX;

        // Step 2: Check all pairs of points to find diagonals
        for (int i = 0; i < points.size(); i++) {
            for (int j = i + 1; j < points.size(); j++) {
                int x1 = points[i][0], y1 = points[i][1];
                int x2 = points[j][0], y2 = points[j][1];

                // If they can be opposite corners of a rectangle
                if (x1 != x2 && y1 != y2) {
                    // Check if the other two corners exist
                    if (x_to_ys[x1].count(y2) && x_to_ys[x2].count(y1)) {
                        int area = abs(x1 - x2) * abs(y1 - y2);
                        res = min(res, area);
                    }
                }
            }
        }

        return res == INT_MAX ? 0 : res;
    }
