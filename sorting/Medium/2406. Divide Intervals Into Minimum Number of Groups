#include <iostream>
#include <vector>
using namespace std;

int countNonOverlappingIntervals(vector<vector<int>>& intervals) {
    if (intervals.empty()) return 0;

    int count = 1;                // Count the first interval
    vector<int> curr = intervals[0];

    for (int i = 1; i < intervals.size(); i++) {
        // Use >= to allow touching intervals as non-overlapping
        if (intervals[i][0] >= curr[1]) {
            count++;
            curr = intervals[i];  // Update current interval
        }
    }

    return count;
}

int main() {
    vector<vector<int>> intervals = {{1,3}, {3,5}, {6,8}, {7,10}};
    cout << "Number of non-overlapping intervals: "
         << countNonOverlappingIntervals(intervals) << endl;  // Output: 3
    return 0;
}
