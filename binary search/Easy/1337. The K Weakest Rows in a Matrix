priority_queue<pair<int, int>> pq; // (soldiers, row_index)

    for (int i = 0; i < mat.size(); ++i) {
        int count = 0;

        for (int j = 0; j < mat[i].size(); ++j) {
            if (mat[i][j] == 1) count++;
            else break; 
        }

        pq.push({count, i});

        if (pq.size() > k)
            pq.pop();
    }

    vector<int> result(k);
    for (int i = k - 1; i >= 0; --i) {
        result[i] = pq.top().second;
        pq.pop();
    }

    return result;
