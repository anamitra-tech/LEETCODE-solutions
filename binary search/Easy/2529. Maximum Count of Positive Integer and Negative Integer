
    int maximumCount(vector<int>& nums) {
        int n = nums.size();

        // Count negatives
        int s = 0, e = n-1;
        while (s <= e) {
            int mid = s + (e - s) / 2;
            if (nums[mid] < 0) s = mid + 1;
            else e = mid - 1;
        }
        int negativeCount = s;  // s points to first  positive

        // Count positives
        s = 0, e = n-1;
        while (s <= e) {
            int mid = s + (e - s) / 2;
            if (nums[mid] > 0) e = mid - 1;
            else s = mid + 1;
        }
        int positiveCount = n - s;

        return max(negativeCount, positiveCount);
    }

