//explicitly sorting

int missingNumber(vector<int>& nums) {
    sort(nums.begin(), nums.end());
    int n = nums.size();
    for (int i = 0; i < n; i++) {
        if (nums[i] != i)
            return i;
    }
    return n; // if all numbers match their index
}

//without sorting

int missingNumber(vector<int>& nums) {
    int xorSum = 0;
    int n = nums.size();
    for(int i=0;i<n;i++){
        xorSum ^= i ^ nums[i];
    }
    return xorSum ^ n;
}
