vector<int> twoSum(vector<int>& numbers, int target) {
    int n = numbers.size();

    for (int i = 0; i < n - 1; i++) {
        int s = i + 1, e = n - 1;
        
        // Binary search for target - numbers[i]
        while (s <= e) {
            int mid = s + (e - s) / 2;

            if (numbers[mid] == target - numbers[i]) {
                // Return 1-based indices
                return {i + 1, mid + 1};
            } 
            else if (numbers[mid] < target - numbers[i]) {
                s = mid + 1;  // move right
            } 
            else {
                e = mid - 1;  // move left
            }
        }
    }

    return {}; // No solution found (problem guarantees one solution)
}
