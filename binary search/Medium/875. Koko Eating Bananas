    int minEatingSpeed(vector<int>& piles, int h) {
        long long left = 1;
        long long right = *max_element(piles.begin(), piles.end());
        long long result = 0;

        while (left <= right) {
            long long mid = left + (right - left) / 2;
            long long hours = 0;

            for (int pile : piles) {
                if (pile % mid == 0) {
                    hours += pile / mid;
                } else {
                    hours += (pile / mid) + 1;
                }
            }

            if (hours <= h) {
                result = mid;
                right = mid - 1;
            } else {
                left = mid + 1;
            }
        }

        return result;
    }


//key takeaways is that we needed to g=find k that is speed so minimum should be 1 banana per hour and maximum should be the 
max pile out of the whole pile section 
